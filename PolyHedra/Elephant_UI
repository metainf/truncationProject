public class Elephant_UI
{
  static JFrame mainFrame;    //the main window for the program

  public static void main (String[] args)
  {
    mainFrame = new JFrame("Short Elephants"); //the frame for the program's GUI
    mainFrame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE); //ends the program when the main window is closed
    mainFrame.setExtendedState( mainFrame.getExtendedState()|JFrame.MAXIMIZED_BOTH ); //maximizes the program's main window
    
    JPanel mainPanel = new JPanel();  //the main panel
    mainPanel.setLayout(new BoxLayout(mainPanel, BoxLayout.PAGE_AXIS)); //sets mainPanel to a vertically stacking layout
    
    //
  }
}
